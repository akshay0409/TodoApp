<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="10dp"
    app:cardCornerRadius="10dp">

    <View
        android:id="@+id/viewColorTag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="5dp"
        android:background="@android:color/white"
        android:paddingBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtShowTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="5dp"
                android:layout_toStartOf="@+id/txtShowCategory"
                android:ellipsize="end"
                android:maxLines="1"
                tool:text="TaskTitle"
                android:textColor="@color/dark"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/txtShowTask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/txtShowTitle"
                android:ellipsize="end"
                android:maxLines="1"
                tool:text="Task Subtitle"
                android:textColor="@color/dark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtShowCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:maxWidth="80dp"
                android:ellipsize="end"
                android:maxLines="1"
                tool:text="Category"
                android:textColor="@color/dark"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textShowDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtShowTask"
               android:layout_marginTop="15sp"
                tool:text="Date"
                android:textColor="@color/lighterGrey"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/txtShowDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textShowDate"
                tool:text="22-7-2021"
                 android:visibility="visible"/>

            <TextView
                android:id="@+id/textShowTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txtShowTask"
                android:layout_marginTop="15sp"
                tool:text="Time"
                android:textColor="@color/lighterGrey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txtShowTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/textShowTime"
                tool:text="22:01 AM"
                android:visibility="visible"/>








        </RelativeLayout>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>